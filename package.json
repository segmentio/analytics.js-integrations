{
  "name": "analytics.js-integrations",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/segmentio/analytics.js-integrations.git",
  "author": "Segment",
  "license": "See LICENSE",
  "private": true,
  "workspaces": [
    "integrations/*"
  ],
  "scripts": {
    "clean": "rm -rf *.log coverage bin/* node_modules",
    "coverage": "codecov",
    "fmt": "standard --fix",
    "lint": "eslint integrations/**/lib/ integrations/**/test/",
    "precommit": "lint-staged",
    "coverage-report": "open coverage/report/index.html",
    "test": "lerna run --concurrency 1 --since master test --stream -- --single-run --reporters summary --log-level error",
    "test:ci": "lerna run --concurrency 1 --stream --since master test:ci -- --log-level error"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint"
      ]
    }
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "devDependencies": {
    "karma-browserstack-launcher": "^1.5.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-summary-reporter": "^1.6.0",
    "lerna": "^3.15.0"
  }
}
